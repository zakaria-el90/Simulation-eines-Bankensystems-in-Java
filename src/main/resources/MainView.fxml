<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.controller.MainView_Controller">
    <Label alignment="CENTER" layoutX="174.0" layoutY="42.0" prefHeight="26.0" prefWidth="239.0" text="Accounts " textAlignment="CENTER" textFill="#993838">
        <font>
          <Font name="Times New Roman" size="36.0" />
        </font>
    </Label>
    <ListView fx:id="accountsListView" layoutX="34.0" layoutY="100.0" prefHeight="200.0" prefWidth="519.0">
        <contextMenu>
          <ContextMenu>
              <items>
                  <MenuItem onAction="#handleSelectAccount" text="Auswählen" />
                  <MenuItem onAction="#handleDeleteAccount" text="Löschen" />
              </items>
          </ContextMenu>
        </contextMenu>
    </ListView>
    <Button layoutX="215.0" layoutY="321.0" onAction="#handleCreateAccount" prefHeight="38.0" prefWidth="171.0" text="Neuen Account erstellen">
        <font>
          <Font name="Times New Roman" size="14.0" />
        </font>
    </Button>
</AnchorPane>
